{
  "name": "playground",
  "private": true,
  "description": "",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch --enable-source-maps .",
    "build": "tsc --project tsconfig.build.json",
    "start": "NODE_ENV=production bun --enable-source-maps .",
    "lint": "run-p lint:tsc lint:oxlint lint:oxfmt",
    "lint:tsc": "tsc --noEmit",
    "lint:oxfmt": "oxfmt --check .",
    "lint:oxlint": "oxlint --type-aware .",
    "lint:fix": "oxfmt . && oxlint --fix '{src,test}/**/*.{ts,json,md}'"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "typescript": "^5.9.3"
  },
  "devEngines": {
    "packageManager": {
      "name": "bun",
      "version": ">=1.3.5",
      "onFail": "error"
    },
    "runtime": {
      "name": "bun",
      "version": ">=1.3.5",
      "onFail": "error"
    }
  },
  "engines": {
    "bun": ">=1.3.5"
  }
}
