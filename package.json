{
  "name": "playground",
  "description": "",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development node --watch --enable-source-maps src/main.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "NODE_ENV=production node --enable-source-maps .",
    "test": "vitest",
    "lint": "npm run lint:prettier && npm run lint:oxlint",
    "lint:prettier": "prettier --check '{src,test}/**/*.{ts,json,md}'",
    "lint:oxlint": "oxlint --type-aware .",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,json,md}' && oxlint --type-aware --fix ."
  },
  "private": true,
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24.11.0",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "version": "11.6.2",
      "onFail": "error"
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/node": "^24.10.0",
    "oxlint": "^1.26.0",
    "oxlint-tsgolint": "^0.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
